<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>

        <!-- Tensor library is experimental. -->
        <NoWarn>SYSLIB5001</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="SimpleAi.Benchmarks"/>
        <InternalsVisibleTo Include="SimpleAi.Tests"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="JetBrains.Annotations" Version="2024.3.0"/>
        <PackageReference Include="JetBrains.ExternalAnnotations" Version="10.2.155"/>
        <PackageReference Include="System.Numerics.Tensors" Version="9.0.2"/>
    </ItemGroup>

</Project>
